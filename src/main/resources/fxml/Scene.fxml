<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
	fx:controller="it.polito.tdp.rivers.FXMLController">
	<top>
		<Label text="Lab11_Rivers" BorderPane.alignment="CENTER">
			<font>
				<Font name="System Bold" size="12.0" />
			</font>
		</Label>
	</top>
	<center>
		<VBox spacing="10.0" BorderPane.alignment="CENTER">
			<children>
				<HBox spacing="10.0">
					<children>
						<Label text="Fiume" />
						<ComboBox fx:id="boxRiver" prefWidth="150.0" promptText="Scegli un fiume..." />
					</children>
				</HBox>
				<GridPane>
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
							prefWidth="100.0" />
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
							prefWidth="100.0" />
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
							prefWidth="100.0" />
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
							prefWidth="100.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<Label text="Prima data" />
						<Label text="Ultima data" GridPane.columnIndex="1" />
						<Label text="N. misure" GridPane.columnIndex="2" />
						<TextField fx:id="txtStartDate" editable="false"
							GridPane.rowIndex="1" />
						<TextField fx:id="txtEndDate" editable="false"
							GridPane.columnIndex="1" GridPane.rowIndex="1" />
						<TextField fx:id="txtNumMeasurements" editable="false"
							GridPane.columnIndex="2" GridPane.rowIndex="1" />
						<Label text="f_med" GridPane.columnIndex="3" />
						<TextField fx:id="txtFMed" editable="false"
							GridPane.columnIndex="3" GridPane.rowIndex="1" />
					</children>
				</GridPane>
				<HBox spacing="10.0">
					<children>
						<Label text="Fattore di scala (k)" />
						<TextField fx:id="txtK" />
						<Button fx:id="btnSimula" mnemonicParsing="false" text="Simula" />
					</children>
				</HBox>
				<TextArea fx:id="txtResult" editable="false" prefHeight="200.0"
					prefWidth="200.0" />
			</children>
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
			</BorderPane.margin>
		</VBox>
	</center>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>
</BorderPane>